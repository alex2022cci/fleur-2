<!DOCTYPE html>
<html class="no-js" lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="robots" content="noindex, follow" />
        <meta name="description" content="{% block description %}Welcome!{% endblock %}">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="shortcut icon" href="{{ asset('img/favicon.png') }}" type="image/x-icon" />
        <link rel="stylesheet" href="{{ asset('css/font-icons.css') }}">
        <link rel="stylesheet" href=" {{ asset('css/plugins.css') }} ">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">

    </head>
    <body>
        <!--[if lte IE 9]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
        <![endif]-->
        <div class="body-wrapper">
       
            {{render(controller('App\\Controller\\MenuController::index'))}}

            {% if app.session.get('cart') | length > 0 %}
                {{render(controller('App\\Controller\\CartController::show_card_right'))}}
            {% else %}
                {{render(controller('App\\Controller\\CartController::show_card_right_empty'))}}
            {% endif %}
            
            {% include '_partials/menu-responsive.html.twig' %}
            {% block body %}{% endblock %}

            {% include '_partials/footers.html.twig' %}

            {% include '_partials/add-to-cart.html.twig' %}
            {% include '_partials/wishlist.html.twig' %}
            {% include '_partials/quick-view.html.twig' %}
        </div>
        
        <div class="preloader d-none" id="preloader">
            <div class="preloader-inner">
                <div class="spinner">
                    <div class="dot1"></div>
                    <div class="dot2"></div>
                </div>
            </div>
        </div>

        <script src="{{ asset('js/plugins.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-element-bundle.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
